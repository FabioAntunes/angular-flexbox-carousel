{
  "compilerOptions": {
    "baseUrl": "./src",
    "declaration": true,
    "stripInternal": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "module": "es2015",
    "moduleResolution": "node",
    "rootDir": "./src",
    "lib": [
      "es2015",
      "dom"
    ],
    "paths": {
      "@angular/core": ["node_modules/@angular/core"],
      "rxjs/*": ["node_modules/rxjs/*"]
    },
    "sourceMap": true,
    "inlineSources": true,
    "target": "es2015",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  }
}
